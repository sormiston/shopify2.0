<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">
      {{ section.settings.subtext }}
    </p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{ shop_url }}"
      class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white"
    >
      {{ section.settings.url_text }}
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex flex-col items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404 not found",
      "label": "404 Heading Title"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "The page you were looking for doesn't exist.",
      "label": "404 Subtext"
    },
    {
      "type": "url",
      "id": "url_",
      "default": "/",
      "label": "404 Button URL"
    },
    {
      "type": "text",
      "id": "url_text",
      "default": "Back to Home",
      "label": "404 Button Text"
    }
  ]
}
{% endschema %}
