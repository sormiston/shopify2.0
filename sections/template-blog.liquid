<div class="flex flex-wrap">
  <!-- Assuming 'posts' is an array of blog post objects -->
  <!-- Iterating over 'posts' to render individual cards -->
  {% for article in blog.articles %}
    <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 px-4 mb-4">
      <div class="bg-white rounded-lg shadow-md transition-shadow duration-300 hover:shadow-xl">
        <div class="p-4">
          {% if article.image %}
            <img
              src="{{ article.image | image_url }}"
              alt="{{ article.title }}"
              class="mb-4 rounded-lg"
            >
          {% endif %}
          <h2 class="text-lg font-semibold">{{ article.title }}</h2>
          {% if article.excerpt %}
            <p class="text-gray-500">{{ article.excerpt }}</p>
          {% else %}
            <p class="text-gray-500">
              {{ article.content | strip_html | truncatewords: 15 }}
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
